<style>
  .card {
    border: none;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    margin-top: 30px;
  }

  .card-header h1 {
    font-size: 24px;
    font-weight: 600;
    margin: 0;
  }

  .form-group {
    margin-bottom: 20px;
  }

  label {
    font-weight: 600;
    margin-bottom: 5px;
  }

  input[type="text"],
  textarea {
    border: 1px solid #ddd;
    border-radius: 4px;
    padding: 8px;
    width: 100%;
  }

  select.form-control {
    width: auto;
  }

  .btn {
    background-color: #4CAF50;
    border: none;
    color: white;
    padding: 8px 16px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 14px;
    margin: 4px 2px;
    border-radius: 4px;
    cursor: pointer;
  }

  .btn:hover {
    background-color: #3e8e41;
  }
</style>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h1>New Task</h1>
        </div>

        <div class="card-body">
          <%= form_with(model: @task, local: true) do |form| %>
            <% if @task.errors.any? %>
              <div class="alert alert-danger">
                <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

                <ul>
                <% @task.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= form.label :title %>
              <%= form.text_field :title, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_area :description, class: 'form-control' %>
            </div>

            <div class="form-group due_date">
              <%= form.label :due_date %>
              <%= form.date_select :due_date, { class: 'form-control', start_year: Date.today.year } %>
            </div>

            <div class="form-group">
              <%= form.submit class: 'btn btn-primary' %>
              <%= link_to 'Cancel', tasks_path, class: 'btn btn-secondary ml-2' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
